{
  "name": "srag/devtools",
  "description": "Add some dev tools to ILIAS plugin config, if core dev mode is enabled, like reload ctrl structure",
  "version": "1.3.0",
  "extra": {
    "ilias_plugin": {
      "ilias_min_version": "6.0",
      "ilias_max_version": "6.999"
    },
    "generate_plugin_readme_template": "ILIAS_LIBRARY",
    "long_description_template": "src/LONG_DESCRIPTION.md"
  },
  "type": "library",
  "keywords": [
    "dev",
    "ilias",
    "plugin",
    "tools"
  ],
  "homepage": "https://github.com/fluxapps/DevTools",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "fluxlabs",
      "email": "support@fluxlabs.ch",
      "homepage": "https://fluxlabs.ch",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "srag/dic": ">=0.1.0",
    "srag/librarylanguageinstaller": ">=0.1.0"
  },
  "require-dev": {
    "srag/generateplugininfoshelper": ">=0.1.0"
  },
  "autoload": {
    "psr-4": {
      "srag\\DevTools\\SrPluginGenerator\\": "src/"
    },
    "classmap": [
      "src/class.DevToolsCtrl.php"
    ]
  },
  "config": {
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "generate-plugin-readme": [
      "srag\\GeneratePluginInfosHelper\\SrPluginGenerator\\GeneratePluginReadme::generatePluginReadme"
    ],
    "update-version": [
      "srag\\GeneratePluginInfosHelper\\SrPluginGenerator\\UpdateVersion::updateVersion"
    ]
  }
}
